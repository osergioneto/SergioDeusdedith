{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  }
}